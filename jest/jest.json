{
  "rootDir": "..",
  "coverageDirectory": "<rootDir>/src/__tests__/__coverage__/",
  "setupFiles": [
    "<rootDir>src/__tests__/setupTests.js"
  ],
  "roots": [
    "<rootDir>/src/"
  ],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__tests__/__mocks__/fileMock.js",
    "\\.(css|scss|less)$": "<rootDir>/src/__tests__/__mocks__/styleMock.js"
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "transform": {
    "^.+\\.(ts|tsx)$": "<rootDir>/jest/jest.preprocessor.js"
  },
  "transformIgnorePatterns": [
    "/node_modules/"
  ],
  "testRegex": "/__tests__/.*\\.(ts|tsx)$",
  "moduleDirectories": [
    "node_modules"
  ],
  "globals": {
    "DEVELOPMENT": false,
    "FAKE_SERVER": false
  }
}
