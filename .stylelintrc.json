{
    "extends": "stylelint-config-standard",
    "rules": {
        "block-no-empty": null,
        "color-no-invalid-hex": true,
        "declaration-colon-space-after": "always",
        "indentation": [4, {
          "except": ["value"]
        }],
        "max-empty-lines": 2,
        "rule-empty-line-before": [ "always", {
          "except": ["first-nested"],
          "ignore": ["after-comment"]
        } ],
        "unit-whitelist": ["em", "rem", "%", "s"]
      }
}