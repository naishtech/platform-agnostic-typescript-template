{
  "name": "platform-agnostic-typescript-template",
  "version": "0.0.1",
  "description": "Platform Agnostic TypeScript Template (PATT)",
  "keywords": [
    "react",
    "webpack",
    "typescript",
    "babel",
    "sass",
    "hmr",
    "starter",
    "boilerplate"
  ],
  "author": "Andrew Naish",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naishtech/platform-agnostic-typescript-template"
  },
  "bugs": {
    "url": "https://github.com/naishtech/platform-agnostic-typescript-template/issues"
  },
  "homepage": "https://www..io",
  "scripts": {
    "build:prod": "npm run lint:sass && npm run clean-dist && webpack -p --config=webpack/prod.js",
    "build:test": "npm run lint:sass && npm run clean-dist && webpack -p --config=webpack/test.js",
    "build:dev": "npm run lint:sass && npm run clean-dist && webpack -p --config=webpack/dev.js",
    "clean-dist": "node rimraf.js dist",
    "lint:es": "eslint ./src --ext .ts,.tsx",
    "lint:sass": "stylelint ./src/**/*.scss",
    "start": "npm run start:web",
    "start:web": "npm run clean-dist && webpack-dev-server --config=webpack/dev.js",
    "start:desktop": "npm run build:dev && node npxcap.js electron",
    "start:android": "npm run build:dev && node npxcap.js android",
    "start:ios": "npm run build:dev && npx cap copy ios && node npxcap.js ios",
    "switch:test": "firebase use test",
    "deploy:test": "npm run clean-dist && npm run switch:test && npm run build:test && firebase deploy --only hosting",
    "switch::prod": "firebase use prod",
    "deploy:prod": "npm run clean-dist && npm run switch:prod && npm run build:prod && firebase deploy --only hosting",
    "test": "jest --coverage --config=jest/jest.json"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "express": "^4.17.1",
    "file-loader": "^6.0.0",
    "firebase-tools": "^7.16.1",
    "html-webpack-plugin": "^4.0.3",
    "image-webpack-loader": "^6.0.0",
    "jest": "^24.9.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "react": "^16.13.1",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.20",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-webpack-plugin": "^2.0.0",
    "typescript": "^3.8.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@capacitor/android": "^1.5.2",
    "@capacitor/cli": "^1.5.2",
    "@capacitor/core": "^1.5.2",
    "@capacitor/ios": "^1.5.2",
    "firebase": "^7.13.1",
    "html-react-parser": "^0.10.3",
    "mobx": "^5.15.4",
    "mobx-react": "^6.1.8",
    "react-firebaseui": "^4.1.0",
    "react-ga": "^2.7.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  },
  "postcss": {}
}
