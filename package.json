{
  "name": "platform-agnostic-typescript-template",
  "version": "0.0.1",
  "description": "Platform Agnostic TypeScript Template (PATT)",
  "keywords": [
    "react",
    "webpack",
    "typescript",
    "babel",
    "sass",
    "hmr",
    "starter",
    "boilerplate"
  ],
  "author": "Andrew Naish",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naishtech/platform-agnostic-typescript-template"
  },
  "bugs": {
    "url": "https://github.com/naishtech/platform-agnostic-typescript-template/issues"
  },
  "homepage": "https://www..io",
  "scripts": {
    "build:prod": "npm run clean-dist && webpack -p --config=webpack/prod.js",
    "build:test": "npm run clean-dist && webpack -p --config=webpack/test.js",
    "build:dev": "npm run clean-dist && webpack -p --config=webpack/dev.js",
    "clean-dist": "node rimraf.js dist",
    "lint:es": "eslint ./src --ext .ts,.tsx",
    "lint:sass": "stylelint ./src/**/*.scss",
    "start": "npm run start:web",
    "start:web": "npm run clean-dist && webpack-dev-server --config=webpack/dev.js",
    "start:desktop": "npm run build:dev && node npxcap.js electron",
    "start:android": "npm run build:dev && node npxcap.js android",
    "start:ios": "npm run build:dev && npx cap copy ios && node npxcap.js ios",
    "switch:test": "firebase use test",
    "deploy:test": "npm run clean-dist && npm run switch:test && npm run build:test && firebase deploy --only hosting",
    "switch::prod": "firebase use prod",
    "deploy:prod": "npm run clean-dist && npm run switch:prod && npm run build:prod && firebase deploy --only hosting",
    "test": "jest --coverage --config=jest/jest.json"
  },
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.0",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-react": "^6.24.1",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.4.0",
    "eslint-plugin-react": "^7.14.3",
    "express": "^4.17.1",
    "file-loader": "^4.2.0",
    "firebase-tools": "^7.3.2",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^6.0.0",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "react": "^16.9.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.9.0",
    "react-hot-loader": "^4.12.13",
    "react-test-renderer": "^16.9.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-webpack-plugin": "^1.0.0",
    "typescript": "^3.6.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-dev-middleware": "^3.7.1",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@capacitor/android": "^1.2.0",
    "@capacitor/cli": "^1.2.0",
    "@capacitor/core": "^1.2.0",
    "@capacitor/ios": "^1.2.0",
    "firebase": "^7.0.0",
    "html-react-parser": "^0.9.1",
    "mobx": "^5.13.0",
    "mobx-react": "^6.1.3",
    "react-firebaseui": "^4.0.0",
    "react-ga": "^2.6.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1"
  },
  "postcss": {}
}
